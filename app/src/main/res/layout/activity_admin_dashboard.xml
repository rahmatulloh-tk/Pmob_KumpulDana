<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_background"
    tools:context=".admin.AdminDashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adminHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_home_background"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewWelcomeAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hai, ADMIN"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewAdminRoleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel Kontrol Utama"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeAdmin" />

        <Button
            android:id="@+id/btnLogoutAdminHeader"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/white"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="14sp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewWelcomeAdmin"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAdminRoleInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textHeaderAdminOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU ADMINISTRATOR"
        android:textSize="18sp"
        android:textColor="@color/text_dark"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminHeaderLayout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardManajemenProjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:contentPadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHeaderAdminOptions">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manajemen Event Donasi"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/opensans_semibold" />

            <Button
                android:id="@+id/buttonManajemenProjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelola Proyek Donasi"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button_primary"
                android:textColor="@android:color/white"
                android:fontFamily="@font/opensans_semibold"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVerifyDonations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:contentPadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardManajemenProjects">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi Donasi"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/opensans_semibold" />

            <Button
                android:id="@+id/buttonVerifyDonations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verifikasi Donasi Masuk"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button_primary"
                android:textColor="@android:color/white"
                android:fontFamily="@font/opensans_semibold"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardManajemenUsers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:contentPadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardVerifyDonations">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manajemen Pengguna"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/opensans_semibold" />

            <Button
                android:id="@+id/buttonManajemenUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelola Akun Pengguna"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button_primary"
                android:textColor="@android:color/white"
                android:fontFamily="@font/opensans_semibold"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>