<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_background" tools:context=".ui.HomeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_home_background"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewHaiUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hai, [Nama Pengguna]"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDonasiCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Donasi"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewHaiUser" />

        <Button
            android:id="@+id/buttonEditProfil"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profil"
            android:textColor="@color/white"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="14sp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewHaiUser"
            app:layout_constraintBottom_toBottomOf="@+id/textViewDonasiCount" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textHeaderDonasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONASI"
        android:textSize="18sp"
        android:textColor="@color/text_dark"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIsiFormDonasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:contentPadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHeaderDonasi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi Form Donasi"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/opensans_semibold" />

            <Button
                android:id="@+id/buttonIsiFormDonasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi Form Donasi"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button_primary"
                android:textColor="@android:color/white"
                android:fontFamily="@font/opensans_semibold"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textHeaderRiwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIWAYAT DONASI"
        android:textSize="18sp"
        android:textColor="@color/text_dark"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardIsiFormDonasi" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRiwayatDonasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:contentPadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHeaderRiwayat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Donasi"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/opensans_semibold" />

            <Button
                android:id="@+id/buttonRiwayatDonasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lihat Riwayat Donasi"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button_primary"
                android:textColor="@android:color/white"
                android:fontFamily="@font/opensans_semibold"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>