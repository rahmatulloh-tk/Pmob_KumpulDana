<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewProjectImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:background="@color/light_gray_background"
            android:contentDescription="Gambar Proyek" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewProjectTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Judul Proyek Donasi"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textViewProjectDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Deskripsi singkat mengenai proyek donasi ini."
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewCollectedAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 0 dari Rp. 10.000.000"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <ProgressBar
                android:id="@+id/progressBarProject"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:max="100"
                android:progress="0"/>

            <TextView
                android:id="@+id/textViewTimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sisa Waktu: N/A"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/buttonEditProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Proyek"
                android:layout_gravity="end"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>