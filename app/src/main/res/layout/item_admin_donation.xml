<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:contentPadding="12dp"
    android:backgroundTint="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewDonationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: #12345"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            android:fontFamily="@font/opensans_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDonationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal: 2025-06-10"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            android:fontFamily="@font/opensans_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDonorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Donor: John Doe"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:fontFamily="@font/opensans_semibold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDonationId" />

        <TextView
            android:id="@+id/textViewProjectTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Proyek: Bantuan Korban Banjir"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDonorName" />

        <TextView
            android:id="@+id/textViewDonationAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nominal: Rp 50.000"
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewProjectTitle" />

        <TextView
            android:id="@+id/textViewPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Via: Saldo"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDonationAmount" />

        <TextView
            android:id="@+id/textViewDonationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Berhasil"
            android:textColor="@color/teal_700"
            android:textSize="14sp"
            android:fontFamily="@font/opensans_semibold"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewProjectTitle"
            app:layout_constraintBottom_toBottomOf="@+id/textViewPaymentMethod"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>